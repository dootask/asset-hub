# Server base URL (optional, used when generating absolute URLs)
# ASSET_HUB_BASE_URL=http://localhost:3000

# SQLite database file path (relative path is resolved from project root)
ASSET_HUB_DB_PATH=./data/asset-hub.db

# 具有管理员权限的 DooTask 用户 ID（逗号分隔，可审批任意请求）
ASSET_HUB_ADMIN_USER_IDS=1,2,3

# 版本与授权信息（用于系统升级页展示）
ASSET_HUB_VERSION=0.1.0
ASSET_HUB_RELEASED_AT=2025-11-01
ASSET_HUB_LICENSE_PLAN=Community
ASSET_HUB_LICENSE_EDITION=Community
ASSET_HUB_LICENSE_MAX_USERS=100
# 留空表示长期有效
ASSET_HUB_LICENSE_EXPIRES_AT=
ASSET_HUB_CHANGELOG_URL=https://github.com/dootask/asset-hub/releases

# Playwright DooTask micro-app 测试配置（必填，E2E 会直接访问宿主环境）
PLAYWRIGHT_DOOTASK_HOST=https://dootask.example.com
PLAYWRIGHT_APP_URL=https://asset-hub.example.com/apps/asset-hub
PLAYWRIGHT_USER_ID=demo-user
PLAYWRIGHT_USER_TOKEN=demo-token

